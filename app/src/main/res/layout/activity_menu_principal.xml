<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MenuPrincipalActivity">

    <View
        android:id="@+id/view2"
        android:layout_width="330dp"
        android:layout_height="441dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/container_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vVoz"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_view_box"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/vProyecto"
        app:layout_constraintVertical_bias="0.412" />

    <View
        android:id="@+id/vProyecto"
        android:layout_width="262dp"
        android:layout_height="133dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_view_box"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/vTarea" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Proyecto"
        android:textColor="#DCDCDC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vProyecto"
        app:layout_constraintEnd_toEndOf="@+id/vProyecto"
        app:layout_constraintStart_toStartOf="@+id/vProyecto"
        app:layout_constraintTop_toTopOf="@+id/vProyecto" />

    <View
        android:id="@+id/vTarea"
        android:layout_width="262dp"
        android:layout_height="144dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_view_box"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <View
        android:id="@+id/view4"
        android:layout_width="330dp"
        android:layout_height="67dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/container_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#B8B8B8"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Tarea"
        android:textColor="#DCDCDC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vTarea"
        app:layout_constraintEnd_toEndOf="@+id/vTarea"
        app:layout_constraintStart_toStartOf="@+id/vTarea"
        app:layout_constraintTop_toTopOf="@+id/vTarea" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/vVoz"
        app:layout_constraintEnd_toEndOf="@+id/vVoz"
        app:layout_constraintStart_toStartOf="@+id/vVoz"
        app:layout_constraintTop_toTopOf="@+id/vVoz"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

</androidx.constraintlayout.widget.ConstraintLayout>